{
  "name": "wechat-bot",
  "version": "0.0.01",
  "description": "A light-weight Wechat bot",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && node node_modules/webpack-cli/bin/cli.js",
    "clean": "node node_modules/rimraf/bin.js dist/",
    "start": "npm run build && node dist/index.js",
    "test": "npm run clean && nyc mocha --opts config/mocha.opts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "app/src/index.ts"
    ],
    "include": [
      "app/src/**/*.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cubic-ai/wechat-bot.git"
  },
  "author": "Fernando Zhu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cubic-ai/wechat-bot/issues"
  },
  "homepage": "https://github.com/cubic-ai/wechat-bot#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.10.4",
    "@types/qrcode": "^1.3.1",
    "@types/request": "^2.48.1",
    "@types/webpack": "^4.4.25",
    "chai": "^4.2.0",
    "express": "^4.16.4",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "typescript": "^3.3.3333",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "qrcode": "^1.3.3",
    "request": "^2.88.0"
  }
}