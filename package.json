{
  "name": "wechat-bot",
  "version": "0.0.01",
  "description": "A light-weight Wechat bot",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run clean && node node_modules/webpack-cli/bin/cli.js",
    "clean": "node node_modules/rimraf/bin.js dist .nyc_output",
    "start": "npm run build && node dist/index.js",
    "test": "npm run clean && nyc mocha --opts config/mocha.opts",
    "docker:build": "docker build -t wechat-bot .",
    "docker:remove": "",
    "docker:start": "docker run wechat-bot"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "app/src/index.ts"
    ],
    "include": [
      "app/src/**/*.ts"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cubic-ai/wechat-bot.git"
  },
  "author": "Fernando Zhu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cubic-ai/wechat-bot/issues"
  },
  "homepage": "https://github.com/cubic-ai/wechat-bot#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "@types/qrcode": "^1.3.2",
    "@types/request": "^2.48.1",
    "@types/webpack": "^4.4.31",
    "@types/xml2js": "^0.4.4",
    "chai": "^4.2.0",
    "express": "^4.16.4",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.3",
    "ts-loader": "^6.0.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "immutable": "^4.0.0-rc.12",
    "qrcode": "^1.3.3",
    "request": "^2.88.0",
    "rxjs": "^6.5.2",
    "xml2js": "^0.4.19"
  }
}
